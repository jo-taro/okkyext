{
    "name": "Okky Extension Debug",
    "description": "okky.kr browser extension",
    "version": "1.0.0",

    "permissions": [
      "storage",
      "tabs"
    ],
    
    "content_scripts": [
        {
        "matches": [ "http://okky.kr/*"],
        "js": ["content.js"],
        "run_at": "document_start"
        }
    ],

    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },

    "options_page": "options.html",

    "manifest_version":2
}